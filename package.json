{
  "name": "aqua-watermark",
  "version": "1.0.1",
  "description": "Aqua Watermark - Beautiful watermark tool with friendly interface",
  "author": "Aqua Team",
  "private": true,
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "rebuild": "npx @electron/rebuild",
    "postinstall": "electron-builder install-app-deps"
  },
  "build": {
    "appId": "com.aqua.watermark",
    "productName": "Aqua Watermark",
    "icon": "assets/icons/icon-512x512.png",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "node_modules/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "**/sharp/**/*"
    ],
    "npmRebuild": true,
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "dependencies": {
    "canvas": "^3.2.0",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "font-list": "^1.5.1",
    "jimp": "^1.6.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "electron": "^31.0.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9"
  }
}
